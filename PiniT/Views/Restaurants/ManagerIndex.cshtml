@model PiniT.Models.Restaurant
<style>
    #all-images {
        overflow: hidden;
        height: 300px;
        overflow-y: scroll;
    }
        body {
        background-image: url('../../Content/Images/background.jpg');
        background-size: cover;
        background-attachment: fixed;
    }
</style>

@{
    ViewBag.Title = "ManagerIndex";
}

<div class="row">
    <div class="col"></div>
    <div class="bg-white col-8 text-center shadow-lg text-light p-0" id="card-back">
        <h4 class="font-italic p-2 bg-dark">Restaurant Info</h4>
        <hr class="m-0"/>


        <dl class="col dl-horizontal mx-auto">
            <dt>
                @Html.DisplayNameFor(model => model.Manager.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Manager.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CompanyName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CompanyName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.VAT)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.VAT)
            </dd>

        </dl>
        <div class="row">
            <div class="col p-0 btn-group mx-3">
                @Html.ActionLink("Edit", "Edit", new { id = Model.RestaurantId }, new { @class = "btn btn-danger font-weight-bold p-1" })
                @Html.ActionLink("Add Image", "AddImage", "Images", null, new { @class = "btn btn-danger font-weight-bold p-1" })
                @Html.ActionLink("Profile Image", "SetProfileImage", "Images", null, new { @class = "btn btn-danger font-weight-bold p-1" })
                @Html.ActionLink("Back", "ManagerIndex", "Tables", null, new { @class = "btn btn-warning font-weight-bold p-1 ml-auto" })


            </div>
        </div>

    </div>
    <div class="col"></div>

    <div id="card-back" class="bg-white col-12 mt-3 shadow-lg text-light p-0">
        <h4 class="font-italic text-center bg-dark p-2 m-0">Uploaded Images</h4>
        <hr class="m-0"/>

        <div id="all-images" class="text-center">
            @foreach (var img in Model.Images)
            {
                <img id="@img.ImageId" class="mx-auto mb-1" src="@Url.Content(img.ImagePath)" alt="@img.Title" style="width:250px; height:250px;" />

            }
        </div>
    </div>



</div>





