<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
        @Html.ActionLink("PiniT", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                @if (User.IsInRole("Manager"))
                {
                    <li class="nav-item">@Html.ActionLink("Restaurant", "ManagerIndex", "Restaurants", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Menu", "ManagerIndex", "Products", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Reservations", "Index", "Reservations", null, new { @class = "nav-link" })</li>
                }
                @if (User.IsInRole("Customer"))
                {
                    <li class="nav-item">@Html.ActionLink("Reservations", "Index", "Reservations", null, new { @class = "nav-link" })</li>
                }
                <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>


    <div class="container body-content">


        @RenderBody()

        <div class="row">
            <div class="col-md-2 card shadow-lg border border-danger p-0 fixed-bottom" style="border-width:5px;">
                <div class="card-header border-dark font-weight-bolder bg-danger text-white text-center">
                    <p class="m-0">Reservation Request</p>
                </div>
                <div class="card-body bg-light border-danger text-center">
                    <p class="m-0">Customer Name: <cite class="font-weight-light">@*@ViewBag.Table.Size*@</cite></p>
                    <hr />
                    <p class="m-0">Table Name: <cite class="font-weight-light">@*@ViewBag.Table.Size*@</cite></p>
                    <hr />
                    <p class="m-0">BookDate: <cite class="font-weight-light">  @*@DateTime.Now.ToString("dd/MM/yyyy HH:mm")*@</cite></p>
                    <hr />
                    <button class="btn btn-danger m-0" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                        Comments
                    </button>
                    <div class="collapse" id="collapseExample">
                        <div class="card card-body bg-light border-danger text-center mt-1">
                           Text Area.... 
                        </div>
                    </div>
                    @*@Html.LabelFor(x => x.Comment, new { htmlAttributes = new { @class = "mx-auto" } })<br />
        @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "m-0 p-0 form-control border border-secondary font-weight-light mx-auto", rows = "5" } })*@

                </div>
            </div>
        </div>
        <hr />
        <footer class="row">
            <p class="mr-auto col-3">&copy; @DateTime.Now.Year - Pinit Application</p>
            @if (!User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Business Account", "RegisterManager", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "col-3 btn btn-primary" })
            }
        </footer>
        <div id="chat"></div>
        <div id="notifications"></div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    @RenderSection("scripts", required: false)



    <script>
        $(document).ready(() => {

            let hub = $.connection.piniTHub;

            hub.client.getReservation = (reservation) => {
                console.log(reservation);
                $('#notifications').append(`<p>${reservation.Customer} pinned Table:${reservation.Table} at ${reservation.Date} <br/> Comment : ${reservation.Comment} </p>`);
            };

            $.connection.hub.start().done(() => {
                console.log('Connected');
            });


        });

    </script>
</body>
</html>
