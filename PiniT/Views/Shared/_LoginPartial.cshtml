@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "ml-auto" }))
    {
        @Html.AntiForgeryToken()

    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <i class="nav-link far fa-question-circle m-1" href="#" id="navbardrop" data-toggle="dropdown">

            </i>
            <div class="dropdown-menu bg-danger mt-2">
                <a class="">@Html.ActionLink("  How to Use", "About", "Home", null, new { @class = "nav-link col-md-12 text-left btn btn-danger far fa-keyboard" })</a>
                <a class="">@Html.ActionLink("  Contact", "Contact", "Home", null, new { @class = "nav-link col-md-12 text-left btn btn-danger far fa-envelope" })</a>
            </div>
        </li>
        <li class="nav-item">
            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
        </li>
        <li class="nav-item"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
<ul class="navbar-nav ml-auto">
    <li class="nav-item dropdown">
        <i class="nav-link far fa-question-circle m-1" href="#" id="navbardrop" data-toggle="dropdown">
           
        </i>
        <div class="dropdown-menu bg-danger mt-2">
            <a class="">@Html.ActionLink("  How to Use", "About", "Home", null, new { @class = "nav-link col-md-12 text-left btn btn-danger far fa-keyboard" })</a>
            <a class="">@Html.ActionLink("  Contact", "Contact", "Home", null, new { @class = "nav-link col-md-12 text-left btn btn-danger far fa-envelope" })</a>
        </div>
    </li>
    <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
    <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
</ul>
}

