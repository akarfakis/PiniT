@using PiniT.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<style>
    body {
        background: url('../../Content/Images/background.jpg') no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        max-width: 100%
    }

    .container {
        max-width: 80%
    }
</style>

<div class="row">
    <div class="col-md-8 col text-center mx-auto">

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h1 class="a mt-1 text-white font-weight-bolder font-italic mx-auto m-2">@ViewBag.Title</h1>
            <hr />
            <div class="container bg-light border border-light shadow-lg">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group text-center">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label font-italic font-weight-bold mt-1 mx-auto" })
                    <div class="col-md-10 col-sm-10 mx-auto text-center">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control font-weight-light text-center mx-auto" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group text-center">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label font-italic font-weight-bold mx-auto" })
                    <div class="col-md-10 col-sm-10 col-lg-10 text-center font-italic mx-auto">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control text-center mx-auto" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger mx-auto" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 mx-auto">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-6 mx-auto">
                        <input type="submit" value="Log in" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }
    </div>


</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}